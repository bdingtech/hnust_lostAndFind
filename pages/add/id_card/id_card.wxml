<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">身份证</view>
</cu-custom>

<form bindsubmit="formSubmit">

  <view class="cu-form-group margin-top">
    <view class="title">失主姓名</view>
    <input name="losterName" placeholder="请输入身份证上的姓名"></input>

  </view>
    <view class="cu-form-group">
    <view class="title">身份证号码</view>
    <input type="number" name="id" placeholder="请输入失主的身份证号码"></input>
  </view>

  <view class="cu-form-group margin-top">
    <view class="title">你的姓名</view>
    <input name="finderName" placeholder="请输入你的称呼"></input>
  </view>

  <view class="cu-form-group ">
    <view class="title">联系方式</view>
    <input type="number" name="tel" placeholder="请输入你的手机号码"></input>
  </view>

<view class="padding flex flex-direction">
  <button form-type="submit" class="cu-btn bg-green lg">提交</button>
</view>

</form>
<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">银行卡</view>
</cu-custom>

<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="cu-form-group margin-top">
    <view class="title">卡号</view>
    <input name="id" placeholder="请输入拾到卡上的卡号"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">所属银行</view>
    <input name="bank" placeholder="请输入银行卡所归属的银行"></input>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">你的姓名</view>
    <input name="finderName" placeholder="请输入你的称呼"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">联系方式</view>
    <input name="tel" placeholder="请输入你的手机号码"></input>
  </view>


<view class="padding flex flex-direction">
  <button form-type="submit" bindtap="onAdd" class="cu-btn bg-green lg">提交</button>
</view>

</form>